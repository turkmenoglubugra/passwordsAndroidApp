<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sec"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".yeniHesapActivity">


    <TextView
        android:id="@+id/hesapAdiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFFF"
        android:text="HESAP ADI"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="88dp" />

    <EditText
        android:id="@+id/hesapAdiText"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_margin="20dp"
        android:background="#FFFF"
        android:ellipsize="end"
        android:ems="10"
        android:hint="Buraya Yazabilirsiniz..."
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text=""
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/kullaniciAdiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FFFF"
        android:text="KULLANICI ADI"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="88dp" />

    <EditText
        android:id="@+id/kullaniciAdiText"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_margin="20dp"
        android:background="#FFFF"
        android:ellipsize="end"
        android:ems="10"
        android:hint="Buraya Yazabilirsiniz..."
        android:inputType="textMultiLine"
        android:maxLines="1"
        android:scrollHorizontally="false"
        android:singleLine="true"
        android:text=""
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/match_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:background="#FFFF"
        android:text="ŞİFRE"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/sifreText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#FFFF"
        android:hint="Buraya Yazabilirsiniz..."
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:text=""
        android:textAlignment="center"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="170dp" />

    <Button
        android:id="@+id/btnYeniHesapEkle"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:background="@drawable/round"
        android:padding="20dp"
        android:text="HESAP EKLE" />
</LinearLayout>